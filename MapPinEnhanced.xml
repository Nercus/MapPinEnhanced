<Ui xmlns="http://www.blizzard.com/wow/ui/"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\..\FrameXML\UI.xsd">
    <Script file="core.lua" />

    <Frame name="MPHTrackerEntryTemplate" virtual="true" hidden="true" mixin="MapPinEntryMixin">
        <Size x="222" y="40" />
        <Layers>
            <Layer level="ARTWORK">
                <Texture atlas="auctionhouse-nav-button-select" parentKey="highlightBorder" hidden="true" alpha="0.4">
                    <Size x="222" y="40" />
                    <Anchors>
                        <Anchor point="TOPLEFT" relativeKey="$parent" />
                        <Anchor point="BOTTOMRIGHT" relativeKey="$parent" />
                    </Anchors>
                </Texture>
            </Layer>
            <Layer level="OVERLAY">
                <FontString inherits="GameFontNormalMed2" justifyH="LEFT" justifyV="MIDDLE" parentKey="name" alpha="0.7">
                    <Size x="175" y="20" />
                    <Anchors>
                        <Anchor point="TOPLEFT" x="35" y="-4" />
                    </Anchors>
                </FontString>
                <FontString inherits="GameFontWhiteTiny" justifyH="LEFT" justifyV="MIDDLE" parentKey="info" alpha="0.7">>
                    <Size x="175" y="20" />
                    <Anchors>
                        <Anchor point="BOTTOMLEFT" x="35" />
                    </Anchors>
                </FontString>
            </Layer>
        </Layers>
        <Frames>
            <Frame parentKey="button">
                <Size x="25" y="25" />
                <Anchors>
                    <Anchor point="LEFT" x="5" y="0" />
                </Anchors>
                <Layers>
                    <Layer level="BACKGROUND">
                        <Texture atlas="Waypoint-MapPin-Untracked" parentKey="normal">
                            <Size x="25" y="25" />
                            <Anchors>
                                <Anchor point="TOPLEFT" relativeKey="$parent" />
                                <Anchor point="BOTTOMRIGHT" relativeKey="$parent" />
                            </Anchors>
                        </Texture>
                        <Texture atlas="Waypoint-MapPin-Highlight" hidden="true" parentKey="highlight">
                            <Size x="25" y="25" />
                            <Anchors>
                                <Anchor point="TOPLEFT" relativeKey="$parent" />
                                <Anchor point="BOTTOMRIGHT" relativeKey="$parent" />
                            </Anchors>
                        </Texture>
                    </Layer>
                </Layers>
            </Frame>
            <Button hidden="true" parentKey="navStart">
                <Size x="20" y="20" />
                <Anchors>
                    <Anchor point="RIGHT" relativeKey="$parent" x="-10" />
                </Anchors>
                <NormalTexture rotation="210" atlas="CovenantSanctum-Renown-Arrow-Depressed" alpha="0.5" desaturated="true"/>
                <HighlightTexture rotation="210" atlas="CovenantSanctum-Renown-Arrow-Depressed" alpha="1" desaturated="false"/>
            </Button>
        </Frames>
    </Frame>

    <Frame name="MPHFrame" toplevel="true" parent="UIParent" enableMouse="true" movable="true" clampedToScreen="true" registerForDrag="LeftButton" hidden="true">
        <Size x="250" y="300" />
        <Anchors>
            <Anchor point="CENTER" x="0" y="0" />
        </Anchors>

        <Frames>
            <Frame name="$parentHeader" parentKey="header">
                <Size x="250" y="25" />
                <Anchors>
                    <Anchor point="TOPLEFT" relativePoint="TOPLEFT" x="0" y="0" />
                </Anchors>
                <Layers>
                    <Layer level="ARTWORK">
                        <Texture parentKey="textureLeft" atlas="UI-Frame-Dragonflight-TitleLeft">
                            <Size x="72" y="25" />
                            <Anchors>
                                <Anchor point="LEFT" />
                            </Anchors>
                        </Texture>
                        <Texture parentKey="textureRight" atlas="UI-Frame-Dragonflight-TitleRight">
                            <Size x="72" y="25" />
                            <Anchors>
                                <Anchor point="RIGHT" />
                            </Anchors>
                        </Texture>
                        <Texture parentKey="textureMiddle" atlas="_UI-Frame-Dragonflight-TitleMiddle">
                            <Size x="43" y="25" />
                            <Anchors>
                                <Anchor point="RIGHT" relativeKey="$parent.textureRight" relativePoint="LEFT" />
                                <Anchor point="LEFT" relativeKey="$parent.textureLeft" relativePoint="RIGHT" />
                            </Anchors>
                        </Texture>
                    </Layer>
                    <Layer level="OVERLAY">
                        <FontString name="$parentText" parentKey="text" inherits="GameFontNormalMed2Outline" justifyH="LEFT" text="Map Pins" outline="NORMAL">
                            <Size x="150" y="0" />
                            <Anchors>
                                <Anchor point="LEFT" relativeKey="$parent.textureLeft" relativePoint="RIGHT" x="-25" y="0" />
                            </Anchors>

                        </FontString>
                    </Layer>
                </Layers>
                <Frames>
                    <Button parentKey="close">
                        <Size x="15" y="15" />
                        <Anchors>
                            <Anchor point="LEFT" relativeKey="$parent.textureMiddle" relativePoint="RIGHT" x="27" />
                        </Anchors>
                        <NormalTexture rotation="45" atlas="UI-HUD-Minimap-Zoom-In" />
                        <HighlightTexture rotation="45" atlas="UI-HUD-Minimap-Zoom-In-Mouseover" />
                        <PushedTexture rotation="45" atlas="UI-HUD-Minimap-Zoom-In-Down" />
                        <Scripts>
                            <OnClick>
                                self:GetParent():GetParent():Hide()</OnClick>
                        </Scripts>
                    </Button>
                </Frames>
            </Frame>

            <ScrollFrame parentKey="scrollFrame" inherits="UIPanelScrollFrameTemplate">
                <Size x="225" y="275" />
                <Anchors>
                    <Anchor point="TOPLEFT" x="0" y="-25" />
                    <Anchor point="BOTTOMLEFT" x="0" y="30" />
                </Anchors>
                <ScrollChild>
                    <Frame parentKey="scrollChild">
                        <Size x="225" y="1" />
                        <Anchors>
                            <Anchor point="LEFT" x="0" y="0" />
                            <Anchor point="RIGHT" x="0" y="0" />
                        </Anchors>
                    </Frame>
                </ScrollChild>
            </ScrollFrame>
        </Frames>
        <Scripts>
            <OnLoad function="MPHFrame_OnLoad" />
            <OnDragStart function="MPHFrame_OnDragStart" />
            <OnDragStop function="MPHFrame_OnDragStop" />
        </Scripts>
    </Frame>


</Ui>
