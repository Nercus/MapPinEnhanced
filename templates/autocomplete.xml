<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.blizzard.com/wow/ui/ https://raw.githubusercontent.com/Gethe/wow-ui-source/live/Interface/AddOns/Blizzard_SharedXML/UI.xsd">
    <Script file="autocomplete.lua" />

    <EditBox name="MapPinEnhancedAutocompleteTemplate"
        mixin="MapPinEnhancedAutocompleteMixin, MapPinEnhancedThemeableMixin"
        virtual="true"
        font="GameFontHighlight" autoFocus="false" multiLine="false"
        inherits="MapPinEnhancedInputTemplate">
        <Frames>
            <Frame parentKey="resultsFrame" frameStrata="DIALOG" enableMouse="true" hidden="true">
                <Anchors>
                    <Anchor point="TOPLEFT" relativePoint="BOTTOMLEFT" />
                    <Anchor point="TOPRIGHT" relativePoint="BOTTOMRIGHT" />
                </Anchors>
                <Size x="0" y="150" />
                <Layers>
                    <Layer level="ARTWORK">
                        <Texture parentKey="background" atlas="UI-HUD-CoolDownManager-Bar-BG"
                        >
                            <Anchors>
                                <Anchor point="TOPLEFT" relativePoint="TOPLEFT" x="0" y="0" />
                                <Anchor point="BOTTOMRIGHT" relativePoint="BOTTOMRIGHT" x="5" y="-5" />
                            </Anchors>
                        </Texture>
                    </Layer>
                    <Layer level="OVERLAY">
                        <FontString parentKey="message" inherits="GameFontDisableSmall"
                            justifyH="LEFT" justifyV="MIDDLE"
                            text="BROWSE_NO_RESULTS">
                            <Size x="0" y="20" />
                            <Anchors>
                                <Anchor point="TOPLEFT" x="10" />
                                <Anchor point="BOTTOMRIGHT" x="-10" />
                            </Anchors>
                        </FontString>
                    </Layer>
                </Layers>

                <Frames>
                    <Frame parentKey="scrollBox" inherits="WowScrollBoxList" frameStrata="DIALOG"
                        enableMouse="true">
                        <Anchors>
                            <Anchor point="TOPLEFT" x="5" y="-3" />
                            <Anchor point="BOTTOMRIGHT" relativePoint="BOTTOMRIGHT" x="-5" y="2" />
                        </Anchors>
                    </Frame>
                    <EventFrame parentKey="scrollBar" inherits="MinimalScrollBar">
                        <Anchors>
                            <Anchor point="TOPLEFT" relativeKey="$parent.scrollBox"
                                relativePoint="TOPRIGHT"
                                x="-10" y="-5" />
                            <Anchor point="BOTTOMLEFT" relativeKey="$parent.scrollBox"
                                relativePoint="BOTTOMRIGHT" x="-10" y="0" />
                        </Anchors>
                    </EventFrame>
                </Frames>
            </Frame>
        </Frames>
        <Layers>
            <Layer level="OVERLAY">
                <Texture atlas="Spinner_Ring" hidden="true"
                    parentKey="spinner">
                    <Size x="20" y="20" />
                    <Anchors>
                        <Anchor point="RIGHT" relativePoint="RIGHT" x="-5" />
                    </Anchors>
                    <Animations>
                        <AnimationGroup parentKey="Anim" looping="REPEAT">
                            <Rotation childKey="Spinner" order="1" duration="1" degrees="-360" />
                        </AnimationGroup>
                    </Animations>
                    <Scripts>
                        <OnShow>
                            self.Anim:Play();
                        </OnShow>
                        <OnHide>
                            self.Anim:Stop();
                        </OnHide>
                    </Scripts>
                </Texture>
            </Layer>
        </Layers>
        <Scripts>
            <OnLoad method="OnLoad" />
            <OnTextChanged method="OnTextChanged" />
            <OnKeyDown method="OnKeyDown" />
            <OnEditFocusLost method="OnEditFocusLost" />
        </Scripts>
    </EditBox>


    <Button name="MapPinEnhancedAutocompleteEntryTemplate"
        mixin="MapPinEnhancedAutocompleteEntryMixin, MapPinEnhancedThemeableMixin" virtual="true">
        <Size x="1" y="20" />
        <Layers>
            <Layer level="OVERLAY">
                <FontString inherits="GameFontNormalSmall" parentKey="text"
                    justifyH="LEFT" justifyV="MIDDLE">
                    <Anchors>
                        <Anchor point="TOPLEFT" x="2" />
                        <Anchor point="BOTTOMRIGHT" x="-10" />
                    </Anchors>
                </FontString>
            </Layer>
            <Layer level="HIGHLIGHT">
                <Texture setAllPoints="true" atlas="search-select" alpha="0.3" />
            </Layer>
        </Layers>
        <ButtonText inherits="GameFontNormalSmall" />
    </Button>


