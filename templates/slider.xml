<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.blizzard.com/wow/ui/ https://raw.githubusercontent.com/Gethe/wow-ui-source/live/Interface/AddOns/Blizzard_SharedXML/UI.xsd">
    <Include file="slider.lua" />


    <Frame name="MapPinEnhancedSliderTemplate"
        mixin="MapPinEnhancedSliderMixin, MapPinEnhancedThemeableMixin"
        virtual="true" propagateMouseInput="Both">
        <Size x="200" y="20" />
        <Frames>
            <Button parentKey="back" propagateMouseInput="Motion">
                <Size x="11" y="19" />
                <Anchors>
                    <Anchor point="LEFT" relativePoint="LEFT" x="1" />
                </Anchors>
                <Layers>
                    <Layer level="BACKGROUND">
                        <Texture atlas="Minimal_SliderBar_Button_Left" useAtlasSize="true" />
                    </Layer>
                </Layers>
                <Scripts>
                    <OnClick>
                        local parent = self:GetParent();
                        local slider = parent.slider;
                        slider:SetValue(slider:GetValue() - slider:GetValueStep());
                    </OnClick>
                </Scripts>
            </Button>
            <Button parentKey="forward" propagateMouseInput="Motion">
                <Size x="9" y="18" />
                <Anchors>
                    <Anchor point="RIGHT" relativePoint="RIGHT" x="-1" />
                </Anchors>
                <Layers>
                    <Layer level="BACKGROUND">
                        <Texture atlas="Minimal_SliderBar_Button_Right" useAtlasSize="true" />
                    </Layer>
                </Layers>
                <Scripts>
                    <OnClick>
                        local parent = self:GetParent();
                        local slider = parent.slider;
                        slider:SetValue(slider:GetValue() + slider:GetValueStep());
                    </OnClick>
                </Scripts>
            </Button>
            <Slider inherits="MinimalSliderTemplate" obeyStepOnDrag="true" parentKey="slider"
                propagateMouseInput="Motion">
                <Size x="1" y="16" />
                <Anchors>
                    <Anchor point="LEFT" relativePoint="RIGHT" relativeKey="$parent.back" />
                    <Anchor point="RIGHT" relativePoint="LEFT" relativeKey="$parent.forward" />
                </Anchors>
            </Slider>
        </Frames>
        <Layers>
            <Layer level="ARTWORK">
                <FontString parentKey="valueText" inherits="GameFontNormalSmall">
                    <Anchors>
                        <Anchor point="RIGHT" relativePoint="LEFT" x="-5" />
                    </Anchors>
                </FontString>
            </Layer>
        </Layers>
        <Scripts>
            <OnLoad method="OnLoad" />
            <OnSizeChanged method="OnSizeChanged" />
            <OnValueChanged method="OnValueChanged" />
        </Scripts>
    </Frame>


    <Texture name="MapPinEnhancedSliderTickTemplate" virtual="true"
        atlas="common-dropdown-icon-radialtick-yellow">
        <Size x="10" y="10" />
    </Texture>
</Ui>
