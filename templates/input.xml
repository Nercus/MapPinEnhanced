<Ui xmlns="http://www.blizzard.com/wow/ui/"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.blizzard.com/wow/ui/ https://raw.githubusercontent.com/Gethe/wow-ui-source/live/Interface/AddOns/Blizzard_SharedXML/UI.xsd">
    <Script file="input.lua" />

    <EditBox name="MapPinEnhancedInputTemplate"
        mixin="MapPinEnhancedInputMixin, MapPinEnhancedThemeableMixin"
        virtual="true"
        font="GameFontHighlight" autoFocus="false" multiLine="false">
        <TextInsets left="5" right="15" />
        <Layers>
            <Layer level="BACKGROUND">
                <Texture parentKey="bg"
                    atlas="UI-HUD-CoolDownManager-Bar-BG">
                    <Anchors>
                        <Anchor point="TOPLEFT" x="-1" y="1" />
                        <Anchor point="BOTTOMRIGHT" x="5" y="-5" />
                    </Anchors>
                </Texture>
            </Layer>

            <Layer level="ARTWORK">
                <FontString parentKey="placeholderText" inherits="GameFontDisableSmall"
                    hidden="true" justifyH="LEFT" justifyV="MIDDLE">
                    <Anchors>
                        <Anchor point="LEFT" x="10" y="0" />
                    </Anchors>
                </FontString>
            </Layer>
        </Layers>
        <Frames>
            <Button parentKey="clearButton" hidden="true">
                <Size x="10" y="10" />
                <Anchors>
                    <Anchor point="RIGHT" relativePoint="RIGHT" x="-10" />
                </Anchors>
                <NormalTexture
                    file="Interface/AddOns/MapPinEnhanced/assets/icons/IconCross_Yellow.png"
                    desaturated="true" setAllPoints="true" />
                <PushedTexture
                    file="Interface/AddOns/MapPinEnhanced/assets/icons/IconCross_Yellow.png"
                    desaturated="true">
                    <Anchors>
                        <Anchor point="TOPLEFT" relativePoint="TOPLEFT" x="1" y="-1" />
                        <Anchor point="BOTTOMRIGHT" relativePoint="BOTTOMRIGHT" x="-1" y="1" />
                    </Anchors>
                </PushedTexture>
                <Scripts>
                    <OnClick>
                        local parent = self:GetParent();
                        parent:ClearFocus();
                        parent:SetText("");
                        parent:UpdateClearButtonVisibility();
                        parent:UpdatePlaceholderVisibility();
                    </OnClick>
                </Scripts>
            </Button>
            <Frame parentKey="inlineLabel" hidden="true">
                <Size x="100" y="20" />
                <Layers>
                    <Layer level="ARTWORK">
                        <Texture atlas="plunderstorm-icon-key" setAllPoints="true"
                            parentKey="bg" />
                        <FontString parentKey="text" inherits="GameFontNormalSmall"
                            justifyH="CENTER" justifyV="MIDDLE">
                            <Anchors>
                                <Anchor point="CENTER" />
                            </Anchors>
                        </FontString>
                        <Texture parentKey="icon" inherits="MapPinEnhancedIconTemplate"
                            desaturated="true" alpha="0.8">
                            <Anchors>
                                <Anchor point="CENTER" x="1" />
                            </Anchors>
                        </Texture>
                    </Layer>
                </Layers>
                <Anchors>
                    <Anchor point="LEFT" x="0" />
                </Anchors>
            </Frame>
        </Frames>
        <Scripts>
            <OnSizeChanged>
                -- original left and right texture has a ratio of 1:2.5
                local height = self:GetHeight()
                self.inlineLabel:SetHeight(height);
            </OnSizeChanged>
            <OnEscapePressed method="OnEscapePressed" />
            <OnEditFocusGained method="OnEditFocusGained" />
            <OnEditFocusLost method="OnEditFocusLost" />
            <OnChar method="OnChar" />
            <OnLoad method="OnLoad" />
            <OnEvent method="OnEvent" />
        </Scripts>
    </EditBox>
</Ui>
