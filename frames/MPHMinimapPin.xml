<Ui xmlns="http://www.blizzard.com/wow/ui/"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\..\FrameXML\UI.xsd">
    <Script file="MPHMinimapPin.lua"/>

    <Frame name="MPHMinimapPinTemplate" mixin="MPHMinimapPinMixin" virtual="true">
        <Size x="30" y="30"/>
        <Layers>
            <Layer level="BACKGROUND">
                <Texture parentKey="Icon" atlas="Waypoint-MapPin-Untracked">
                    <Size x="25" y="25"/>
                    <Anchors>
                        <Anchor point="CENTER"/>
                    </Anchors>
                </Texture>
            </Layer>
            <Layer level="HIGHLIGHT">
                <Texture parentKey="Highlight" atlas="Waypoint-MapPin-Highlight">
                    <Size x="25" y="25"/>
                    <Anchors>
                        <Anchor point="CENTER" relativeKey="$parent.Icon"/>
                    </Anchors>
                </Texture>
            </Layer>
        </Layers>
    </Frame>
</Ui>
