<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.blizzard.com/wow/ui/ https://raw.githubusercontent.com/Gethe/wow-ui-source/live/Interface/AddOns/Blizzard_SharedXML/UI.xsd">

    <Include file="coords.lua" />

    <Frame name="MapPinEnhancedCoordsDisplayTemplate"
        mixin="MapPinEnhancedCoordsDisplayMixin"
        movable="true" virtual="true" hidden="true" parent="UIParent">
        <Size x="140" y="20" />
        <Layers>
            <Layer level="BACKGROUND">
                <Texture atlas="gearUpdate-glow-filigree" desaturated="true" parentKey="bg">
                    <Color r="1" g="0.82" b="0" />
                    <Anchors>
                        <Anchor point="TOPLEFT" x="20" />
                        <Anchor point="BOTTOMRIGHT" x="-20" />
                    </Anchors>
                </Texture>
            </Layer>
            <Layer level="ARTWORK">
                <Texture atlas="CircleMaskScalable" parentKey="separator"
                    desaturated="true">
                    <Size x="1" y="20" />
                    <Gradient orientation="VERTICAL">
                        <MinColor r="1" g="0.82" b="0" a="0.4" />
                        <MaxColor r="1" g="0.82" b="0" a="0" />
                    </Gradient>
                    <Anchors>
                        <Anchor point="CENTER" />
                    </Anchors>
                </Texture>
                <FontString inherits="GameFontNormalSmall" parentKey="coordsXDec"
                    text=".00" justifyH="LEFT">
                    <Size x="20" y="20" />
                    <Anchors>
                        <Anchor point="RIGHT" relativeKey="$parent.separator" relativePoint="LEFT" />
                    </Anchors>
                </FontString>
                <FontString inherits="GameFontNormalSmall" parentKey="coordsXInt"
                    text="00" justifyH="RIGHT">
                    <Size x="20" y="20" />
                    <Anchors>
                        <Anchor point="RIGHT" relativeKey="$parent.coordsXDec" relativePoint="LEFT" />
                    </Anchors>
                </FontString>


                <FontString inherits="GameFontNormalSmall" parentKey="coordsYInt"
                    text="00" justifyH="RIGHT">
                    <Size x="18" y="20" />
                    <Anchors>
                        <Anchor point="LEFT" relativeKey="$parent.separator" relativePoint="RIGHT" />
                    </Anchors>
                </FontString>
                <FontString inherits="GameFontNormalSmall" parentKey="coordsYDec"
                    text=".00" justifyH="LEFT">
                    <Size x="20" y="20" />
                    <Anchors>
                        <Anchor point="LEFT" relativeKey="$parent.coordsYInt" relativePoint="RIGHT" />
                    </Anchors>
                </FontString>
            </Layer>
        </Layers>
        <Frames>
            <Button parentKey="closeButton" inherits="MapPinEnhancedIconButtonTemplate"
                hidden="true" propagateMouseInput="Motion">
                <Size x="20" y="20" />
                <KeyValues>
                    <KeyValue key="icon" value="cross" />
                </KeyValues>
                <Anchors>
                    <Anchor point="LEFT" relativePoint="LEFT" />
                </Anchors>
            </Button>
            <Button parentKey="lockButton" inherits="MapPinEnhancedIconButtonTemplate"
                hidden="true" propagateMouseInput="Motion">
                <Size x="20" y="20" />
                <KeyValues>
                    <KeyValue key="icon" value="lock" />
                </KeyValues>
                <Anchors>
                    <Anchor point="RIGHT" relativePoint="RIGHT" />
                </Anchors>
            </Button>
        </Frames>
        <Scripts>
            <OnEnter method="OnEnter" />
            <OnLeave method="OnLeave" />
            <OnShow method="OnShow" />
            <OnHide method="OnHide" />
            <OnMouseDown method="OnMouseDown" />
            <OnMouseUp method="OnMouseUp" />
            <OnUpdate method="OnUpdate" />
            <OnLoad method="OnLoad" />
        </Scripts>
    </Frame>


</Ui>
