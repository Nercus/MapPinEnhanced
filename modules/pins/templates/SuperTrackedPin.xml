<Ui xmlns="http://www.blizzard.com/wow/ui/"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.blizzard.com/wow/ui/ https://raw.githubusercontent.com/Gethe/wow-ui-source/live/Interface/AddOns/Blizzard_SharedXML/UI.xsd">

    <Script file="SuperTrackedPin.lua" />
    <Frame name="MapPinEnhancedSuperTrackedPinTemplate"
        mixin="MapPinEnhancedSuperTrackedPinMixin"
        virtual="true" enableMouse="false"
        clipChildren="false" hidden="true">
        <Size x="50" y="50" />
        <Layers>
            <Layer level="OVERLAY">
                <FontString parentKey="distantText" inherits="GameFontHighlight">
                    <Anchors>
                        <Anchor point="TOP" relativePoint="BOTTOM" y="-12" />
                    </Anchors>
                </FontString>

                <Texture parentKey="beam">
                    <Size x="3" y="150" />
                    <Anchors>
                        <Anchor point="BOTTOM" relativePoint="CENTER" relativeKey="$parent.pinFrame" />
                    </Anchors>
                    <Color r="1" g="1" b="1" />
                    <Gradient orientation="VERTICAL">
                        <MaxColor r="1" g="0.82" b="0" a="0" />
                        <MinColor r="1" g="0.82" b="0" a="1" />
                    </Gradient>
                </Texture>
            </Layer>
        </Layers>
        <Frames>
            <Frame parentKey="pinFrame" inherits="MapPinEnhancedBasePinTemplate">
                <Size x="50" y="50" />
                <Anchors>
                    <Anchor point="CENTER" y="0" />
                </Anchors>
            </Frame>
            <Frame parentKey="title">
                <Size x="70" y="16" />
                <Anchors>
                    <Anchor point="CENTER" />
                </Anchors>
                <Layers>
                    <Layer level="OVERLAY">
                        <Texture parentKey="bg"
                            file="Interface/AddOns/MapPinEnhanced/assets/tracker_hover.png"
                            setAllPoints="true">
                            <Gradient orientation="VERTICAL">
                                <MaxColor r="1" g="0.82" b="0" a="1" />
                                <MinColor r="1" g="0.82" b="0" a="0.4" />
                            </Gradient>
                        </Texture>
                        <FontString inherits="GameFontNormal" text="title" setAllPoints="true"
                            parentKey="text" />
                    </Layer>
                </Layers>
            </Frame>
            <Frame parentKey="arrows">
                <Size x="50" y="50" />
                <Anchors>
                    <Anchor point="TOP" relativePoint="BOTTOM" relativeKey="$parent.pinFrame" y="7" />
                </Anchors>
                <Layers>
                    <Layer level="ARTWORK">
                        <Texture parentKey="arrow1"
                            atlas="Azerite-PointingArrow">
                            <Size x="32" y="16" />
                            <Anchors>
                                <Anchor point="TOP" y="0" />
                            </Anchors>
                        </Texture>
                        <Texture parentKey="arrow2"
                            atlas="Azerite-PointingArrow">
                            <Size x="32" y="16" />
                            <Anchors>
                                <Anchor point="TOP" relativeKey="$parent.arrow1"
                                    relativePoint="BOTTOM" y="10" />
                            </Anchors>
                        </Texture>
                        <Texture parentKey="arrow3"
                            atlas="Azerite-PointingArrow">
                            <Size x="32" y="16" />
                            <Anchors>
                                <Anchor point="TOP" relativeKey="$parent.arrow2"
                                    relativePoint="BOTTOM" y="10" />
                            </Anchors>
                        </Texture>
                    </Layer>
                </Layers>
                <Animations>
                    <AnimationGroup parentKey="PulseArrows" looping="REPEAT">
                        <Alpha childKey="arrow1" order="1" duration="1" fromAlpha="0.2"
                            toAlpha="1"
                            smoothing="IN_OUT" />
                        <Alpha childKey="arrow1" order="2" duration="1" fromAlpha="1"
                            toAlpha="0.2"
                            smoothing="IN_OUT" />
                        <Alpha childKey="arrow2" order="1" duration="1" fromAlpha="0.2"
                            toAlpha="1"
                            smoothing="IN_OUT" startDelay="0.2" />
                        <Alpha childKey="arrow2" order="2" duration="1" fromAlpha="1"
                            toAlpha="0.2"
                            smoothing="IN_OUT" startDelay="0.2" />
                        <Alpha childKey="arrow3" order="1" duration="1" fromAlpha="0.2"
                            toAlpha="1"
                            smoothing="IN_OUT" startDelay="0.4" />
                        <Alpha childKey="arrow3" order="2" duration="1" fromAlpha="1"
                            toAlpha="0.2"
                            smoothing="IN_OUT" startDelay="0.4" />
                    </AnimationGroup>
                </Animations>
                <Scripts>
                    <OnLoad>
                        self.PulseArrows:Play();
                    </OnLoad>
                </Scripts>
            </Frame>
        </Frames>
        <Scripts>
            <OnLoad method="OnLoad" />
            <OnEvent method="OnEvent" />
        </Scripts>
        <Animations>
            <AnimationGroup parentKey="FadeIn" looping="NONE">
                <Scale order="1" duration="0.2" fromScaleX="0.5" fromScaleY="0.5" toScaleX="1"
                    toScaleY="1" smoothing="IN_OUT" />
                <Alpha order="1" duration="0.2" fromAlpha="0" toAlpha="1"
                    smoothing="IN_OUT" />
            </AnimationGroup>
            <AnimationGroup parentKey="FadeOut" looping="NONE">
                <Scale order="1" duration="0.2" fromScaleX="1" fromScaleY="1" toScaleX="0.5"
                    toScaleY="0.5" smoothing="IN_OUT" />
                <Alpha order="1" duration="0.2" fromAlpha="1" toAlpha="0" smoothing="IN_OUT" />
            </AnimationGroup>


        </Animations>
    </Frame>
</Ui>
