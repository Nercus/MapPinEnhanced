<Ui xmlns="http://www.blizzard.com/wow/ui/"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.blizzard.com/wow/ui/ https://raw.githubusercontent.com/Gethe/wow-ui-source/live/Interface/AddOns/Blizzard_SharedXML/UI.xsd">

    <Script file="SuperTrackedPin.lua" />
    <Frame name="MapPinEnhancedSuperTrackedPinTemplate"
        mixin="MapPinEnhancedSuperTrackedPinMixin"
        inherits="MapPinEnhancedBasePinTemplate" virtual="true" enableMouse="false"
        clipChildren="false">
        <Size x="60" y="60" />
        <Layers>
            <Layer level="OVERLAY">
                <FontString parentKey="distantText" inherits="GameFontHighlight" text="??:??">
                    <Anchors>
                        <Anchor point="TOP" relativePoint="BOTTOM" y="-24" />
                    </Anchors>
                </FontString>
                <Texture parentKey="titleBG"
                    file="Interface/AddOns/MapPinEnhanced/assets/tracker_hover.png">
                    <Size x="100" y="20" />
                    <Anchors>
                        <Anchor point="CENTER" y="20" />
                    </Anchors>
                </Texture>
                <FontString inherits="GameFontNormal" text="title">
                    <Anchors>
                        <Anchor point="TOPLEFT" relativePoint="TOPLEFT"
                            relativeKey="$parent.titleBG" />
                        <Anchor point="BOTTOMRIGHT" relativePoint="BOTTOMRIGHT"
                            relativeKey="$parent.titleBG" />
                    </Anchors>
                </FontString>
                <Texture parentKey="beam" alpha="0">
                    <Size x="3" y="150" />
                    <Anchors>
                        <Anchor point="BOTTOM" relativePoint="TOP" />
                    </Anchors>
                    <Color r="1" g="0.82" b="0" />
                    <Gradient orientation="VERTICAL">
                        <MaxColor r="1" g="0.82" b="0" a="0" />
                        <MinColor r="1" g="0.82" b="0" a="1" />
                    </Gradient>
                </Texture>
            </Layer>
        </Layers>
        <Frames>
            <Frame parentKey="arrows">
                <Anchors>
                    <Anchor point="TOP" relativePoint="BOTTOM" />
                </Anchors>
                <Layers>
                    <Layer level="ARTWORK">
                        <Texture parentKey="arrow1"
                            file="Interface\Transmogrify\transmog-tooltip-arrow.blp">
                            <Size x="16" y="16" />
                            <Anchors>
                                <Anchor point="TOP" y="0" />
                            </Anchors>
                        </Texture>
                        <Texture parentKey="arrow2"
                            file="Interface\Transmogrify\transmog-tooltip-arrow.blp">
                            <Size x="16" y="16" />
                            <Anchors>
                                <Anchor point="TOP" relativeKey="$parent.arrow1"
                                    relativePoint="BOTTOM" y="-1" />
                            </Anchors>
                        </Texture>
                        <Texture parentKey="arrow3"
                            file="Interface\Transmogrify\transmog-tooltip-arrow.blp">
                            <Size x="16" y="16" />
                            <Anchors>
                                <Anchor point="TOP" relativeKey="$parent.arrow2"
                                    relativePoint="BOTTOM" y="-1" />
                            </Anchors>
                        </Texture>
                    </Layer>
                </Layers>
                <Animations>
                    <AnimationGroup parentKey="PulseArrows" looping="REPEAT">
                        <Alpha childKey="arrow1" order="1" duration="0.3" fromAlpha="0.2"
                            toAlpha="1"
                            smoothing="IN_OUT" />
                        <Alpha childKey="arrow1" order="2" duration="0.3" fromAlpha="1"
                            toAlpha="0.2"
                            smoothing="IN_OUT" />


                        <Alpha childKey="arrow2" order="1" duration="0.3" fromAlpha="0.2"
                            toAlpha="1"
                            smoothing="IN_OUT" startDelay="0.2" />
                        <Alpha childKey="arrow2" order="2" duration="0.3" fromAlpha="1"
                            toAlpha="0.2"
                            smoothing="IN_OUT" startDelay="0.2" />

                        <Alpha childKey="arrow3" order="1" duration="0.3" fromAlpha="0.2"
                            toAlpha="1"
                            smoothing="IN_OUT" startDelay="0.4" />
                        <Alpha childKey="arrow3" order="2" duration="0.3" fromAlpha="1"
                            toAlpha="0.2"
                            smoothing="IN_OUT" startDelay="0.4" />
                    </AnimationGroup>
                </Animations>
            </Frame>
        </Frames>
        <Scripts>
            <OnLoad method="OnLoad" />
            <OnEvent method="OnEvent" />
            <OnShow method="OnShow" />
            <OnHide method="OnHide" />
        </Scripts>
        <Animations>
            <AnimationGroup parentKey="MorphToBeacon" setToFinalAlpha="true">
                <!-- Pin shifts down -->
                <Translation childKey="background" order="1" duration="0.25" offsetX="0"
                    offsetY="-15" />
                <Translation childKey="texture" order="1" duration="0.25" offsetX="0"
                    offsetY="-15" />
                <Translation childKey="shadow" order="1" duration="0.25" offsetX="0"
                    offsetY="-15" />
                <Translation childKey="icon" order="1" duration="0.25" offsetX="0"
                    offsetY="-15" />
                <Translation childKey="iconMask" order="1" duration="0.25" offsetX="0"
                    offsetY="-15" />
                <Translation childKey="pulseHighlight" order="1" duration="0.25" offsetX="0"
                    offsetY="-15" />
                <Translation childKey="highlight" order="1" duration="0.25" offsetX="0"
                    offsetY="-15" />
                <!-- Pin scales down -->
                <Scale childKey="background" order="1" duration="0.25" scaleX="0.6" scaleY="0.6" />
                <Scale childKey="texture" order="1" duration="0.25" scaleX="0.6" scaleY="0.6" />
                <Scale childKey="shadow" order="1" duration="0.25" scaleX="0.6" scaleY="0.6" />
                <Scale childKey="icon" order="1" duration="0.25" scaleX="0.6" scaleY="0.6" />
                <Scale childKey="iconMask" order="1" duration="0.25" scaleX="0.6" scaleY="0.6" />
                <Scale childKey="pulseHighlight" order="1" duration="0.25" scaleX="0.6" scaleY="0.6" />
                <Scale childKey="highlight" order="1" duration="0.25" scaleX="0.6" scaleY="0.6" />
                <!-- Text shifts down -->
                <Translation childKey="titleBG" order="1" duration="0.25" offsetX="0"
                    offsetY="-30" />
                <!-- beam fades in -->
                <Alpha childKey="beam" order="1" duration="0.25" fromAlpha="0"
                    toAlpha="1" smoothing="IN_OUT" />

                <!-- arrows are hidden -->
                <Alpha childKey="$parent.arrows" order="1" duration="0.25" fromAlpha="1"
                    toAlpha="0" smoothing="IN_OUT" />
            </AnimationGroup>

            <AnimationGroup parentKey="MorphToGrounded" setToFinalAlpha="true">
                <!-- Pin shifts up -->
                <Translation childKey="background" order="1" duration="0.25" offsetX="0"
                    offsetY="15" />
                <Translation childKey="texture" order="1" duration="0.25" offsetX="0"
                    offsetY="15" />
                <Translation childKey="shadow" order="1" duration="0.25" offsetX="0"
                    offsetY="15" />
                <Translation childKey="icon" order="1" duration="0.25" offsetX="0"
                    offsetY="15" />
                <Translation childKey="iconMask" order="1" duration="0.25" offsetX="0"
                    offsetY="15" />
                <Translation childKey="pulseHighlight" order="1" duration="0.25" offsetX="0"
                    offsetY="15" />
                <Translation childKey="highlight" order="1" duration="0.25" offsetX="0"
                    offsetY="15" />
                <!-- Pin scales up -->
                <Scale childKey="background" order="1" duration="0.25" scaleX="1.0" scaleY="1.0" />
                <Scale childKey="texture" order="1" duration="0.25" scaleX="1.0" scaleY="1.0" />
                <Scale childKey="shadow" order="1" duration="0.25" scaleX="1.0" scaleY="1.0" />
                <Scale childKey="icon" order="1" duration="0.25" scaleX="1.0" scaleY="1.0" />
                <Scale childKey="iconMask" order="1" duration="0.25" scaleX="1.0" scaleY="1.0" />
                <Scale childKey="pulseHighlight" order="1" duration="0.25" scaleX="1.0" scaleY="1.0" />
                <Scale childKey="$parent.highlight" order="1" duration=".2" scaleX=".8" scaleY=".8" />
                <!-- Text shifts up -->
                <Translation childKey="$parent.titleBG" order="1" duration=".2" offsetX="0"
                    offsetY="30" />

                <!-- beam fades out -->
                <Alpha childKey="beam" order="1" duration="0.25" fromAlpha="1"
                    toAlpha="0" smoothing="IN_OUT" />

                <!-- arrows are shown -->
                <Alpha childKey="$parent.arrows" order="1" duration="0.25" fromAlpha="0"
                    toAlpha="1" smoothing="IN_OUT" />
            </AnimationGroup>
        </Animations>
    </Frame>
</Ui>
