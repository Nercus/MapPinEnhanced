<Ui xmlns="http://www.blizzard.com/wow/ui/"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.blizzard.com/wow/ui/ https://raw.githubusercontent.com/Gethe/wow-ui-source/live/Interface/AddOns/Blizzard_SharedXML/UI.xsd">

    <Script file="SuperTrackedPin.lua" />
    <Frame name="MapPinEnhancedSuperTrackedPinTemplate"
        mixin="MapPinEnhancedSuperTrackedPinMixin"
        virtual="true" enableMouse="false"
        clipChildren="false" hidden="true">
        <Size x="50" y="50" />
        <Layers>
            <Layer level="OVERLAY">
                <FontString parentKey="distantText" inherits="GameFontHighlight">
                    <Anchors>
                        <Anchor point="TOP" relativePoint="BOTTOM" y="-24" />
                    </Anchors>
                </FontString>
                <Texture parentKey="titleBG"
                    alpha="0"
                    file="Interface/AddOns/MapPinEnhanced/assets/tracker_hover.png">
                    <Size x="100" y="16" />
                    <Anchors>
                        <Anchor point="CENTER" y="20" />
                    </Anchors>
                    <Color r="1" g="0.82" b="0" a="1" />
                </Texture>
                <FontString inherits="GameFontNormal" text="title">
                    <Anchors>
                        <Anchor point="TOPLEFT" relativePoint="TOPLEFT"
                            relativeKey="$parent.titleBG" />
                        <Anchor point="BOTTOMRIGHT" relativePoint="BOTTOMRIGHT"
                            relativeKey="$parent.titleBG" />
                    </Anchors>
                </FontString>
                <Texture parentKey="beam" alpha="0">
                    <Size x="3" y="150" />
                    <Anchors>
                        <Anchor point="BOTTOM" relativePoint="TOP" relativeKey="$parent.pinFrame" />
                    </Anchors>
                    <Color r="1" g="0.82" b="0" />
                    <Gradient orientation="VERTICAL">
                        <MaxColor r="1" g="0.82" b="0" a="0" />
                        <MinColor r="1" g="0.82" b="0" a="1" />
                    </Gradient>
                </Texture>
            </Layer>
        </Layers>
        <Frames>
            <Frame parentKey="pinFrame" inherits="MapPinEnhancedBasePinTemplate">
                <Size x="50" y="50" />
                <Anchors>
                    <Anchor point="CENTER" />
                </Anchors>
            </Frame>
            <Frame parentKey="arrows">
                <Size x="50" y="50" />
                <Anchors>
                    <Anchor point="TOP" relativePoint="BOTTOM" relativeKey="$parent.pinFrame" />
                </Anchors>
                <Layers>
                    <Layer level="ARTWORK">
                        <Texture parentKey="arrow1"
                            atlas="Azerite-PointingArrow">
                            <Size x="48" y="16" />
                            <Anchors>
                                <Anchor point="TOP" y="0" />
                            </Anchors>
                        </Texture>
                        <Texture parentKey="arrow2"
                            atlas="Azerite-PointingArrow">
                            <Size x="48" y="16" />
                            <Anchors>
                                <Anchor point="TOP" relativeKey="$parent.arrow1"
                                    relativePoint="BOTTOM" y="-1" />
                            </Anchors>
                        </Texture>
                        <Texture parentKey="arrow3"
                            atlas="Azerite-PointingArrow">
                            <Size x="48" y="16" />
                            <Anchors>
                                <Anchor point="TOP" relativeKey="$parent.arrow2"
                                    relativePoint="BOTTOM" y="-1" />
                            </Anchors>
                        </Texture>
                    </Layer>
                </Layers>
                <Animations>
                    <AnimationGroup parentKey="PulseArrows" looping="REPEAT">
                        <Alpha childKey="arrow1" order="1" duration="1" fromAlpha="0.2"
                            toAlpha="1"
                            smoothing="IN_OUT" />
                        <Alpha childKey="arrow1" order="2" duration="1" fromAlpha="1"
                            toAlpha="0.2"
                            smoothing="IN_OUT" />
                        <Alpha childKey="arrow2" order="1" duration="1" fromAlpha="0.2"
                            toAlpha="1"
                            smoothing="IN_OUT" startDelay="0.2" />
                        <Alpha childKey="arrow2" order="2" duration="1" fromAlpha="1"
                            toAlpha="0.2"
                            smoothing="IN_OUT" startDelay="0.2" />
                        <Alpha childKey="arrow3" order="1" duration="1" fromAlpha="0.2"
                            toAlpha="1"
                            smoothing="IN_OUT" startDelay="0.4" />
                        <Alpha childKey="arrow3" order="2" duration="1" fromAlpha="1"
                            toAlpha="0.2"
                            smoothing="IN_OUT" startDelay="0.4" />
                    </AnimationGroup>
                </Animations>
                <Scripts>
                    <OnLoad>
                        self.PulseArrows:Play();
                    </OnLoad>
                </Scripts>
            </Frame>
        </Frames>
        <Scripts>
            <OnLoad method="OnLoad" />
            <OnEvent method="OnEvent" />
        </Scripts>
        <Animations>
            <AnimationGroup parentKey="morphToBeacon" setToFinalAlpha="true">
                <!-- Pin shifts down to bottom -->
                <Translation childKey="pinFrame" order="1" duration="0.5" offsetX="0"
                    offsetY="-45" />
                <!-- Pin scales down -->
                <Scale childKey="pinFrame" order="2" duration="0.5" scaleX="0.6" scaleY="0.6" />
                <!-- Text shifts down -->
                <!-- <Translation childKey="titleBG" order="1" duration="0.5" offsetX="0"
                    offsetY="-35" /> -->

                <!-- beam fades in -->
                <Alpha childKey="beam" order="2" duration="0.25" fromAlpha="0"
                    toAlpha="1" smoothing="IN_OUT" />

                <!-- arrows are hidden -->
                <Alpha childKey="arrows" order="2" duration="0.25" fromAlpha="1"
                    toAlpha="0" smoothing="IN_OUT" />

            </AnimationGroup>

            <AnimationGroup parentKey="morphToGrounded" setToFinalAlpha="true">
                <!-- Pin shifts up to top -->
                <Translation childKey="pinFrame" order="1" duration="0.5" offsetX="0"
                    offsetY="45" />
                <!-- Pin scales up -->
                <Scale childKey="pinFrame" order="2" duration="0.5" scaleX="1" scaleY="1" />
                <!-- Text shifts up -->
                <!-- <Translation childKey="titleBG" order="1" duration="0.5" offsetX="0"
                    offsetY="35" /> -->
                <Translation childKey="titleBG" order="1" duration=".2" offsetX="0"
                    offsetY="30" />

                <!-- beam fades out -->
                <Alpha childKey="beam" order="1" duration="0.25" fromAlpha="1"
                    toAlpha="0" smoothing="IN_OUT" />

                <!-- arrows are shown -->
                <Alpha childKey="arrows" order="1" duration="0.25" fromAlpha="0"
                    toAlpha="1" smoothing="IN_OUT" />

            </AnimationGroup>
        </Animations>
    </Frame>
</Ui>
