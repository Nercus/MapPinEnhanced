<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.blizzard.com/wow/ui/ https://raw.githubusercontent.com/Gethe/wow-ui-source/live/Interface/AddOns/Blizzard_SharedXML/UI.xsd">

    <Include file="OptionCategory.lua" />
    <Button name="MapPinEnhancedOptionsCategoryTemplate" mixin="MapPinEnhancedOptionsCategoryMixin"
        virtual="true">
        <Size x="200" y="30" />
        <Frames>
            <Button parentKey="expandButton" propagateMouseInput="Clicks">
                <Size x="16" y="16" />
                <NormalTexture parentKey="normalTexture"
                    atlas="glues-characterSelect-icon-arrowDown" setAllPoints="true" />
                <HighlightTexture parentKey="highlightTexture"
                    atlas="glues-characterSelect-icon-arrowDown-hover" setAllPoints="true" />
                <Anchors>
                    <Anchor point="LEFT" x="5" y="0" />
                </Anchors>
                <Animations>
                    <AnimationGroup parentKey="expand">
                        <Rotation childKey="normalTexture" duration="0.15" degrees="-90"
                            smoothing="IN_OUT" />
                        <Rotation childKey="highlightTexture" duration="0.15" degrees="-90"
                            smoothing="IN_OUT" />
                        <Scripts>
                            <OnFinished>
                                self:GetParent().normalTexture:SetRotation(0)
                                self:GetParent().highlightTexture:SetRotation(0)
                            </OnFinished>
                        </Scripts>
                    </AnimationGroup>
                    <AnimationGroup parentKey="collapse">
                        <Rotation childKey="normalTexture" duration="0.15" degrees="90"
                            smoothing="IN_OUT" />
                        <Rotation childKey="highlightTexture" duration="0.15" degrees="90"
                            smoothing="IN_OUT" />
                        <Scripts>
                            <OnFinished>
                                self:GetParent().normalTexture:SetRotation(math.rad(90))
                                self:GetParent().highlightTexture:SetRotation(math.rad(90))
                            </OnFinished>
                        </Scripts>
                    </AnimationGroup>
                </Animations>
            </Button>
        </Frames>
        <Layers>
            <Layer level="ARTWORK">
                <FontString inherits="GameFontNormalLarge" text="OPTION CATEGORY" justifyH="LEFT"
                    parentKey="title">
                    <Anchors>
                        <Anchor point="BOTTOMLEFT" y="9" x="26" />
                    </Anchors>
                </FontString>
                <Texture atlas="CircleMask">
                    <Color r="0.56" g="0.56" b="0.56" a="0.25" />
                    <Size x="1" y="1" />
                    <Anchors>
                        <Anchor point="BOTTOMLEFT" relativePoint="BOTTOMLEFT" />
                        <Anchor point="BOTTOMRIGHT" relativePoint="BOTTOMRIGHT" />
                    </Anchors>
                </Texture>
            </Layer>
        </Layers>
        <Scripts>
            <OnMouseDown method="OnMouseDown" />
            <OnEnter method="OnEnter" />
            <OnLeave method="OnLeave" />
        </Scripts>
    </Button>
</Ui>
