<Ui xmlns="http://www.blizzard.com/wow/ui/"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.blizzard.com/wow/ui/ https://raw.githubusercontent.com/Gethe/wow-ui-source/live/Interface/AddOns/Blizzard_SharedXML/UI.xsd">
    <Script file="input.lua" />


    <EditBox name="MapPinEnhancedInputTemplate"
        mixin="MapPinEnhancedInputMixin, MapPinEnhancedThemeableMixin" virtual="true"
        font="GameFontHighlight" autoFocus="false" multiLine="false">
        <TextInsets left="10" right="15" />
        <Layers>
            <Layer level="BACKGROUND">
                <Texture parentKey="left" atlas="common-search-border-left" useAtlasSize="false">
                    <Anchors>
                        <Anchor point="LEFT" x="0" y="0" />
                    </Anchors>
                </Texture>
                <Texture parentKey="right" atlas="common-search-border-right">
                    <Anchors>
                        <Anchor point="RIGHT" x="0" y="0" />
                    </Anchors>
                </Texture>
                <Texture parentKey="middle" atlas="_common-search-border-center" horizTile="true">
                    <Size x="1" />
                    <Anchors>
                        <Anchor point="LEFT" relativeKey="$parent.left" relativePoint="RIGHT" />
                        <Anchor point="RIGHT" relativeKey="$parent.right" relativePoint="LEFT" />
                    </Anchors>
                </Texture>
            </Layer>
            <Layer level="OVERLAY">
                <FontString parentKey="placeholder" inherits="GameFontNormalGraySmall"
                    hidden="true" justifyH="LEFT" justifyV="MIDDLE">
                    <Anchors>
                        <Anchor point="LEFT" x="10" y="0" />
                    </Anchors>
                </FontString>
            </Layer>
        </Layers>
        <Frames>
            <Button parentKey="clearButton" hidden="true">
                <Size x="10" y="10" />
                <Anchors>
                    <Anchor point="RIGHT" relativePoint="RIGHT" x="-10" />
                </Anchors>
                <NormalTexture
                    file="Interface/AddOns/MapPinEnhanced/assets/icons/IconCross_Yellow.png"
                    desaturated="true" setAllPoints="true" />
                <PushedTexture
                    file="Interface/AddOns/MapPinEnhanced/assets/icons/IconCross_Yellow.png"
                    desaturated="true">
                    <Anchors>
                        <Anchor point="TOPLEFT" relativePoint="TOPLEFT" x="1" y="-1" />
                        <Anchor point="BOTTOMRIGHT" relativePoint="BOTTOMRIGHT" x="-1" y="1" />
                    </Anchors>
                </PushedTexture>
                <Scripts>
                    <OnClick>
                        local parent = self:GetParent();
                        parent:ClearFocus();
                        parent:SetText("");
                        parent:UpdateClearButtonVisibility();
                    </OnClick>
                </Scripts>
            </Button>
            <Frame parentKey="inlineLabel" hidden="true">
                <Size x="100" y="1" />
                <Layers>
                    <Layer level="ARTWORK">
                        <Texture atlas="QuestSharing-QuestPane-ModifiersBG" setAllPoints="true"
                            parentKey="bg" />
                        <FontString parentKey="text" inherits="GameFontNormalSmall"
                            justifyH="CENTER" justifyV="MIDDLE">
                            <Anchors>
                                <Anchor point="CENTER" />
                            </Anchors>
                        </FontString>
                        <Texture parentKey="icon" inherits="MapPinEnhancedIconTemplate"
                            desaturated="true" alpha="0.8">
                            <Anchors>
                                <Anchor point="CENTER" />
                            </Anchors>
                        </Texture>
                    </Layer>
                </Layers>
                <Anchors>
                    <Anchor point="TOPLEFT" x="1" />
                    <Anchor point="BOTTOMLEFT" x="1" />
                </Anchors>
            </Frame>
        </Frames>
        <Scripts>
            <OnSizeChanged>
                -- original left and right texture has a ratio of 1:2.5
                local height = self:GetHeight()
                self.left:SetSize(height / 2.5, height)
                self.right:SetSize(height / 2.5, height)
                self.middle:SetSize(height / 2.5, height)
            </OnSizeChanged>
            <OnEscapePressed method="OnEscapePressed" />
            <OnEditFocusGained method="OnEditFocusGained" />
            <OnChar method="OnChar" />
            <OnLoad method="OnLoad" />
            <OnEvent method="OnEvent" />
        </Scripts>
    </EditBox>
</Ui>
