<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.blizzard.com/wow/ui/ https://raw.githubusercontent.com/Gethe/wow-ui-source/live/Interface/AddOns/Blizzard_SharedXML/UI.xsd">

    <Script file="TrackerHeader.lua" />
    <Frame name="MapPinEnhancedTrackerHeaderTemplate" mixin="MapPinEnhancedTrackerHeaderMixin"
        virtual="true" enableMouse="true" frameStrata="HIGH" propagateMouseInput="Motion">
        <Size x="1" y="30" />
        <Anchors>
            <Anchor point="TOPLEFT" x="0" y="0" />
            <Anchor point="TOPRIGHT" x="0" y="0" />
        </Anchors>
        <Layers>
            <Layer level="OVERLAY">
                <Texture parentKey="headerTexture"
                    atlas="GarrLanding-ShipMission-InProgress" desaturated="true"
                    setAllPoints="true" />
            </Layer>
            <Layer level="OVERLAY">
                <FontString parentKey="title" inherits="GameFontNormalLarge"
                    text="Map Pin Enhanced Tracker"
                    justifyH="LEFT" justifyV="MIDDLE">
                    <Size x="220" y="18" />
                    <Anchors>
                        <Anchor point="LEFT" x="30" y="0" />
                    </Anchors>
                </FontString>
            </Layer>
        </Layers>
        <Frames>
            <Button parentKey="viewButton">
                <Size x="30" y="30" />
                <NormalTexture atlas="128-RedButton-ArrowDown" />
                <PushedTexture atlas="128-RedButton-ArrowDown-Pressed" />
                <HighlightTexture atlas="128-RedButton-ArrowDown-Highlight" />
                <Anchors>
                    <Anchor point="RIGHT" x="-5" y="0" />
                </Anchors>
            </Button>
        </Frames>
        <Scripts>
            <OnLoad method="OnLoad" />
            <OnMouseDown method="OnMouseDown" />
            <OnMouseUp method="OnMouseUp" />
        </Scripts>
    </Frame>
</Ui>
