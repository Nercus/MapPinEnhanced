<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.blizzard.com/wow/ui/ https://raw.githubusercontent.com/Gethe/wow-ui-source/live/Interface/AddOns/Blizzard_SharedXML/UI.xsd">

    <Script file="TrackerHeader.lua" />
    <Frame name="MapPinEnhancedTrackerHeaderTemplate" mixin="MapPinEnhancedTrackerHeaderMixin"
        virtual="true" enableMouse="true" frameStrata="HIGH" propagateMouseInput="Motion">
        <Size x="1" y="30" />
        <Anchors>
            <Anchor point="TOPLEFT" x="0" y="0" />
            <Anchor point="TOPRIGHT" x="0" y="0" />
        </Anchors>
        <Layers>
            <Layer level="OVERLAY">
                <Texture parentKey="headerTexture"
                    atlas="shop-header-menu-selected-line-middle" desaturated="true">
                    <Gradient orientation="HORIZONTAL">
                        <MinColor r="1" g="0.82" b="0" a="1" />
                        <MaxColor r="1" g="1" b="1" a="1" />
                    </Gradient>
                    <Size x="1" y="5" />
                    <Anchors>
                        <Anchor point="BOTTOMLEFT" x="0" y="0" />
                        <Anchor point="BOTTOMRIGHT" x="0" y="0" />
                    </Anchors>
                </Texture>
            </Layer>
            <Layer level="OVERLAY">
                <FontString parentKey="title" inherits="GameFontNormal"
                    text="Map Pin Enhanced Tracker"
                    justifyH="LEFT" justifyV="MIDDLE">
                    <Size x="220" y="18" />
                    <Anchors>
                        <Anchor point="LEFT" x="30" y="0" />
                    </Anchors>
                </FontString>
            </Layer>
        </Layers>
        <Frames>
            <Button parentKey="closeButton" inherits="MapPinEnhancedIconButtonTemplate">
                <Size x="24" y="24" />
                <KeyValues>
                    <KeyValue key="icon" value="cross" />
                </KeyValues>
                <Anchors>
                    <Anchor point="RIGHT" x="-5" y="2" />
                </Anchors>
            </Button>
            <Button parentKey="viewButton" inherits="MapPinEnhancedIconButtonTemplate">
                <Size x="24" y="24" />
                <KeyValues>
                    <KeyValue key="icon" value="sets" />
                </KeyValues>
                <Anchors>
                    <Anchor point="RIGHT" x="-1" y="0" relativeKey="$parent.closeButton"
                        relativePoint="LEFT" />
                </Anchors>
            </Button>
        </Frames>
        <Scripts>
            <OnLoad method="OnLoad" />
            <OnMouseDown method="OnMouseDown" />
            <OnMouseUp method="OnMouseUp" />
        </Scripts>
    </Frame>
</Ui>
